{
	"compilerOptions": {
		"module": "esnext",
		"target": "es5",
		"declaration": true,
		"jsx": "preserve",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"outDir": "./dist/src",
		"sourceMap": true,
		"typeRoots": [
			"node_modules/@types/"
		],
		"lib": ["es2015", "dom"]
	},
	"exclude": [
		"node_modules",
		"tests",
		"__mocks__",
		"webpack*.js"
	]
}
