{
    "name": "awxjs-severe-weather-module",
    "moduleName": "Severe",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Ben Collin",
    "homepage": "",
    "license": "MIT",
    "scripts": {
        "develop": "NODE_ENV='development' webpack-dev-server",
        "build:js": "rm -fr dist; tsc --sourceMap false --outDir dist/src; babel --config-file ./babel-nodejs.config.js dist/src --out-dir dist/src",
        "build:dev": "webpack",
        "build:prod": "NODE_ENV='production' webpack -p --env production",
        "build": "yarn build:js; yarn build:prod; rm dist/index.html",
        "publish": "yarn build:js; npm publish",
        "dev-server": "yarn develop",
        "lint": "eslint 'src/**/*.{js,ts,tsx}'",
        "lint:fix": "yarn lint -- --fix"
    },
    "husky": {
        "pre-commit": "lint-staged",
        "pre-push": "yarn lint"
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "yarn lint:fix",
            "git add"
        ]
    },
    "files": [
        "/dist",
        "/docs",
        "LICENSE",
        "README.md"
    ],
    "dependencies": {
        "@aerisweather/javascript-sdk": "^1.4.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.7",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.5.5",
        "@babel/preset-env": "^7.8.7",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-add-module-exports": "^1.0.2",
        "clean-webpack-plugin": "^3.0.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.21.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-aerisweather": "../../eslint-plugin-aerisweather",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-unicorn": "^28.0.2",
        "html-webpack-harddisk-plugin": "^1.0.1",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^5.1.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "regenerator-runtime": "^0.13.3",
        "terser-webpack-plugin": "^2.2.1",
        "ts-loader": "^6.2.1",
        "typescript": "^3.8.3",
        "webpack": "^4.42.0",
        "webpack-bundle-analyzer": "^3.6.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3"
    }
}
